<main class="flex-grow-1 m-auto w-100 d-flex flex-column">
  <section
    id="items"
    class="flex-grow-1 d-flex flex-column justify-content-ecnter align-items-center w-100 mt-2 mb-4"
  >
    <img
      src="{{product.photo}}"
      style="height: 300px; width: 60%"
      class="object-fit-cover"
      alt="{{product.title}}"
    />
    <article
      class="d-flex flex-column justify-content-center align-items-center"
    >
      <h2
        id="itemTitle"
        class="subtitle mt-4 mb-2 text-center"
      >{{product.title}}</h2>
      <h5 class="p-2 text-center card-title">Precio:
        {{product.price}}</h5>
      <h5 class="p-2 text-center card-title">Stock disponible:
        {{product.stock}}</h5>
        <input id={{product._id}} class="addToCart btn btn-secondary fs-5 m-1 me-3" type="button" value="Agregar al carrito">
    </article>
  </section>
</main>
<script src="/scripts/addToCart.js"></script>