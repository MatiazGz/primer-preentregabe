<main class="flex-grow-1 m-auto d-flex flex-column">
  <h2 class="subtitle mt-4 mb-2 text-center">NUESTROS PRODUCTOS</h2>
  <section
    id="items"
    class="d-flex flex-wrap justify-content-evenly w-100 mt-2 mb-4"
  >

    {{#each products}}
      <a
        href="/products/{{this._id}}"
        class="card m-2 anchor"
        style="width: 360px"
      >
        <img
          src="{{this.photo}}"
          style="height: 240px"
          class="card-img-top object-fit-cover"
          alt="{{this.title}}"
        />
        <h5 class="p-2 text-center card-title">{{this.title}}</h5>
      </a>
    {{/each}}
  </section>
  <section aria-label="...">
  <ul class="pagination">
    <li class="page-item disabled">
      <a class="page-link">Previous</a>
    </li>
    <li class="page-item">
      <a class="page-link" href="#">Next</a>
    </li>
  </ul>
</section>
</main>
<script src="/scripts/search.js"></script>